{                                                                                                                                                                        
     "build": {                                                                                                                                                             
       "builder": "DOCKERFILE",                                                                                                                                             
       "dockerfilePath": "Dockerfile"                                                                                                                                       
     },                                                                                                                                                                     
     "deploy": {                                                                                                                                                            
       "startCommand": "python3 telegram_bot.py",                                                                                                                           
       "restartPolicyType": "ON_FAILURE",                                                                                                                                   
       "restartPolicyMaxRetries": 10                                                                                                                                        
     },                                                                                                                                                                     
     "environments": {                                                                                                                                                      
       "production": {                                                                                                                                                      
         "variables": {                                                                                                                                                     
           "TELEGRAM_BOT_TOKEN": "${TELEGRAM_BOT_TOKEN}",                                                                                                                   
           "PYTHONUNBUFFERED": "1"                                                                                                                                          
         }                                                                                                                                                                  
       }                                                                                                                                                                    
     }                                                                                                                                                                      
   } 
